<project name="jaxb">
    <!--Part of doms build framework version 1.0.4-->

    <!--    <import  file="build-webservice.xml"/>-->

    <import file="build-soap-webservice.xml"/>

    <fileset id="schema.files" dir="${basedir}">
        <exclude name="**/*"/>
    </fileset>

    <taskdef name="xjc" classname="com.sun.tools.xjc.XJCTask">
        <classpath refid="build.classpath"/>
    </taskdef>


    <target name="jaxb.generate">
        <mkdir dir="tempsrc"/>
        <echo message="Now we generate fedora types"/>
        <property name="schemas" refid="schema.files"/>
        <echo message="${schemas}"/>
        <xjc destdir="tempsrc"
             package="${jaxb.package}">
            <schema refid="schema.files"/>

        </xjc>
    </target>

    <property name="jaxb.package"
              value="dk.statsbiblioteket.doms.bitstorage.generated"/>


</project>
